  co   = checkout
  cob  = checkout -b
  d    = diff
  dw   = diff --word-diff -w
  dr   = diff --raw
  ds   = diff --stat
  l    = log --graph --decorate=short
  lp   = log --graph -p --decorate=short
  lw   = log --graph -p --word-diff -w --decorate=short
  ls   = log --graph --stat --decorate=short
  lr   = log --graph --raw --decorate=short
