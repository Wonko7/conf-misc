  ra   = remote add
  s    = submodule
  ss   = submodule summary
  su   = submodule update --recursive
  suco = submodule update --checkout
  lsf  = ls-files
  m    = merge
  cl   = clean -fdx
  t    = tag
  ui   = update-index

[merge]
  tool   = vimdiff

[mergetool]
  prompt = true

[mergetool "vimdiff"]
  cmd    = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[rerere]
  enabled = 1

